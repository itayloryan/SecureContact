<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black3"
        android:text="4564546545454545454541512121212456413123dseessdedsxsdedededsfsef"
        android:background="@drawable/message_to_bg"/>

    <TextView
        android:id="@+id/time_text"
        android:textSize="12sp"
        android:layout_below="@id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="2017-05-08 13:22"/>

    <TextView
        android:id="@+id/send_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送失败"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/time_text"
        android:layout_below="@id/content_text"
        android:drawableLeft="@drawable/ic_warn"
        android:visibility="gone"/>

</RelativeLayout>