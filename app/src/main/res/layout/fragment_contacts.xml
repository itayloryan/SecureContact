<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:id="@+id/contact_search_view"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="30dp"
        android:iconifiedByDefault="false"
        android:queryHint="搜索联系人"
        android:background="@drawable/search_view_bg"/>

    <TextView
        android:id="@+id/no_contact_message"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/contact_search_view"
        android:text="暂无联系人，请手动添加或从安全中心导入。"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/contact_list_container"
        android:layout_below="@id/contact_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tayloryan.securecontacts.widget.ExpandedPinnedHeaderListView
            android:id="@+id/contacts_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:footerDividersEnabled="false"
            android:divider="@null"
            android:groupIndicator="@null"/>

        <com.tayloryan.securecontacts.widget.SlideBar
            android:id="@+id/contact_slide_bar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/contact_search_list"
        android:layout_below="@id/contact_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>