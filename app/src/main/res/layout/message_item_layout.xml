<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp">

    <com.tayloryan.securecontacts.widget.AvatarView
        android:id="@+id/contact_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/receiver_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="109000000013"
        android:textSize="20sp"
        android:gravity="center_vertical|left"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black3"
        android:layout_toLeftOf="@+id/time_text"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/contact_avatar"/>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="123151651121212212222222222222222222"
        android:lines="2"
        android:textColor="@color/darkgray"
        android:textSize="15sp"
        android:ellipsize="end"
        android:gravity="left|bottom"
        android:layout_toLeftOf="@id/time_text"
        android:layout_toRightOf="@id/contact_avatar"
        android:layout_below="@id/receiver_text"/>

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="10"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:background="@drawable/avatar_bg_orangered"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@id/time_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="2017-05-06 15:36"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>