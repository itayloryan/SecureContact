<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tayloryan.securecontacts">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!-- 获取读取通讯录记录的权限 -->
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <!--  发送消息-->
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <!--  阅读消息-->
    <uses-permission android:name="android.permission.READ_SMS"/>
    <!--  写入消息-->
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <!-- 接收消息 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:name=".ScApp_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.HomeActivity_"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity_"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".ui.contacts.AddContactActivity_"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".ui.security.SecurityActivity_"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".ui.security.SyncActivity_"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".ui.login.UserActivity_"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".ui.contacts.ContactDetailActivity_"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".ui.message.MessageDetailActivity_"
            android:configChanges="orientation|screenSize|fontScale|locale|keyboard|keyboardHidden|navigation|uiMode|smallestScreenSize|layoutDirection"
            android:theme="@style/AppTheme.NoActionBarTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

    </application>

</manifest>